" Enable line numbers
set number

" Use spaces instead of tabs
set expandtab
set tabstop=4
set shiftwidth=4
set smartindent

" Enable mouse support
set mouse=a

" Show matching parentheses
set showmatch

" Enable incremental search and ignore case if no capital letters
set incsearch
set ignorecase
set smartcase

" Use system clipboard
set clipboard=unnamedplus

" Set encoding
set encoding=utf-8
set fileencoding=utf-8

" Enable syntax highlighting
syntax on
